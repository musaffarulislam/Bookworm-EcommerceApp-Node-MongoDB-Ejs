                }
                const url = window.location.origin;
                console.log(url);
                fetch(`${url}/changePassword/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        oldPassword,
                        newPassword
                    })
                }).then((response) => {
                    if (response.status === 200) {
                        return response.json().then((data) => {
