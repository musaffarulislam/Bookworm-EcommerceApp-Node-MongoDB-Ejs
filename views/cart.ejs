<script>
    function productDecrement(cartId,userId) {
      const url = window.location.origin;
      console.log(url);
      console.log(userId);
      fetch(`${url}/productDec?cartId=${cartId}&userId=${userId}`, {
        method: 'POST',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        }
      }).then((response)=>response.json())
      .then((data)=>{
        console.log(data,'This is data');
        document.getElementById('totalAmount').innerText = "₹" + data.totalAmount
        document.getElementById(`productQuantity${data.product.product._id}`).value = data.product.quantity
        document.getElementById(`productPriceAndQuantity${data.product.product._id}`).innerText = "₹" +  data.productPriceAndQuantity
        if(data.shipping){
          document.getElementById('shippingFee').innerText = "Shipping Fee : ₹ 40"
        }else{
          document.getElementById('shippingFee').innerText = "Shipping Fee : Free"
        }
        if(data.quantityZero == true){
          console.log(data.quantityZero,"Zero quantity")
          document.getElementById(`cart${data.product.product._id}`).remove()
        }
        // location.reload()
      })
    }

    function productIncriment(cartId) {
      const url = window.location.origin;
      console.log(url);
      fetch(`${url}/productInc?cartId=${cartId}`, {
        method: 'POST',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        }
      }).then((response)=>response)
      .then((data)=>{
        console.log(data,'This is data');
        location.reload()
      })
    }

    function productRemove(cartId) {
      const url = window.location.origin;
      console.log(url);
      fetch(`${url}/productRemove?cartId=${cartId}`, {
        method: 'POST',
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        }
      }).then((response)=>response)
      .then((data)=>{
        console.log(data,'This is data');
        location.reload()
      })
    }
  </script>
  
